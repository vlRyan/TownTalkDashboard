<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF2626" /> <!-- Background color (red in this example) -->
            <stroke
                android:width="1dp"
                android:color="#444444" />   <!-- Border color (green in this example) -->
            <corners android:radius="10dp" />  <!-- Corner radius in dp (rounded corners) -->
        </shape>
    </item>
</layer-list>