<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical"
    tools:context=".SubmitReportPage">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/back"
        android:textColor="#FF2626" />

    <TextView
        android:id="@+id/topicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topic"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/topicReportInput"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:inputType="text"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/descriptionReportInput"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/border"
        android:inputType="textMultiLine"
        android:lines="8"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_media"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/uploadMediaButton"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="15dp"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:focusable="true">

        <ImageView
            android:id="@+id/uploadMediaImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_image_24" />

    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Submit"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp" />

</androidx.appcompat.widget.LinearLayoutCompat>